# OAuth Platforms
# Meta (Instagram & Facebook Ads)
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here

# Asana
ASANA_CLIENT_ID=your_asana_client_id_here
ASANA_CLIENT_SECRET=your_asana_client_secret_here

# Google Workspace (Gmail, Drive)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Monday.com
MONDAY_CLIENT_ID=your_monday_client_id_here
MONDAY_CLIENT_SECRET=your_monday_client_secret_here

# Slack
SLACK_CLIENT_ID=your_slack_client_id_here
SLACK_CLIENT_SECRET=your_slack_client_secret_here

# LinkedIn
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# TikTok
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# YouTube
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=oauth_broker
POSTGRES_USER=oauth_user
POSTGRES_PASSWORD=change_this_strong_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Encryption Key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=change_this_to_random_32_byte_hex_string

# OAuth Configuration (shared across all platforms)
OAUTH_REDIRECT_URI=https://oauth.yourdomain.com/callback
BASE_URL=https://oauth.yourdomain.com

# Server
PORT=3000
NODE_ENV=production
