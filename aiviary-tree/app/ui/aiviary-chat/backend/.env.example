# Environment Configuration Example
# Copy this file to .env and update with your values
# NEVER commit .env to version control!

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=development  # development or production

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL connection string for async SQLAlchemy
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/app_db

# ============================================================================
# JWT Configuration
# ============================================================================
# Generate a secure secret key using:
# openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Token expiration (in minutes for access, days for refresh)
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================================================
# Security Settings
# ============================================================================
# Set to 'true' in production to enforce HTTPS cookies
SECURE_COOKIES=false

# Rate limiting
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_MINUTES=1

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000

# ============================================================================
# Database Pool Settings (Optional)
# ============================================================================
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
