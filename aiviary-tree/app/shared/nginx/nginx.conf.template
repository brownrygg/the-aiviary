worker_processes 1;

events {
    worker_connections 1024;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;
    sendfile      on;
    keepalive_timeout 65;

    # Logging
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    # Gzip compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml;

    # Upstream definitions
    upstream chat_frontend {
        server aiviary-chat-frontend:3000;
    }

    upstream chat_backend {
        server aiviary-chat-backend:8000;
    }

    upstream analytics_agent {
        server analytics-agent:8000;
    }

    # ==========================================================================
    # Main Domain - Serves Everything (Single Domain Architecture)
    # Example: ocean.theaiviary.com
    # ==========================================================================
    server {
        listen 80;
        server_name ${DOMAIN};

        # React Frontend (handles all routes: /, /chat, /login, /admin)
        location / {
            proxy_pass http://chat_frontend;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            # WebSocket support for Vite HMR
            proxy_read_timeout 86400;
        }

        # Chat Backend API
        location /api {
            proxy_pass http://chat_backend;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            # SSE support for streaming responses
            proxy_buffering off;
            proxy_cache off;
            proxy_read_timeout 300s;
        }

        # Aiviary Connect API (for connection status, sync status)
        location /api/connect/ {
            proxy_pass http://aiviary-connect:3006/api/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Legacy /api/credentials support (for OAuth broker callback)
        location /api/credentials {
            proxy_pass http://aiviary-connect:3006/api/credentials;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # OAuth Success Redirect (after broker sends credentials)
        location /onboard/success {
            proxy_pass http://aiviary-connect:3006/onboard/success;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        # Analytics Agent API (OpenAI-compatible)
        location /v1 {
            proxy_pass http://analytics_agent;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            # SSE support for streaming
            proxy_buffering off;
            proxy_cache off;
            proxy_read_timeout 300s;
        }

        # Health check endpoint
        location /health {
            return 200 'ok';
            add_header Content-Type text/plain;
        }
    }

    # ==========================================================================
    # n8n Admin Subdomain (for admin access)
    # Example: n8n.ocean.theaiviary.com
    # ==========================================================================
    server {
        listen 80;
        server_name n8n.${DOMAIN};

        location / {
            proxy_pass http://n8n:5678;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 86400;
        }
    }

    # ==========================================================================
    # Default server - catch-all (returns 404)
    # ==========================================================================
    server {
        listen 80 default_server;
        server_name _;

        location / {
            return 404;
        }

        location /health {
            return 200 'ok';
            add_header Content-Type text/plain;
        }
    }
}
